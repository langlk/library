<% if @action == "add" %>
  <h1>Add a Patron</h1>
  <form action="/add-patron" method="post">
<% else %>
  <h1>Edit Patron Information</h1>
  <form action="/patrons/<%= @patron.id %>/edit" method="post">
    <input type="hidden" name="_method" value="patch">
<% end %>
  <div class="form-group">
    <label for="first-name">First Name:</label>
    <input type="text" name="first-name" class="form-control" value="<%= @patron ? @patron.first_name : "" %>">
  </div>

  <div class="form-group">
    <label for="last-name">Last Name:</label>
    <input type="text" name="last-name" class="form-control" value="<%= @patron ? @patron.last_name : "" %>">
  </div>

  <% if @action == "add" %>
    <button type="submit" class="btn">Add Patron</button>
  <% else %>
    <a href="/patrons/<%= @patron.id %>"><button type="button" class="btn">Cancel</button></a>
    <button type="submit" class="btn">Update  Patron</button>
  <% end %>
</form>
