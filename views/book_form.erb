<h1><%= @action.capitalize %> a Book</h1>

<form action="/catalog/<%= @action %>" method="post">
  <% if @action == "edit" %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" name="title" class="form-control">
  </div>

  <div class="form-group">
    <label for="author-first">Author First Name:</label>
    <input type="text" name="author-first" class="form-control">
  </div>

  <div class="form-group">
    <label for="author-last">Author Last Name:</label>
    <input type="text" name="author-last" class="form-control">
  </div>

  <button type="submit" class="btn"><%= @action.capitalize %> Book</button>
</form>
