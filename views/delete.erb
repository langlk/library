
<% if @type == "account" %>
  <h1>Are you sure you want to delete your account?</h1>
<% else %>
  <h1>Are you sure you want to delete this <%= @type == "catalog" ? "book" : "patron" %>?</h1>
<% end %>

<form action="/<%= @type %>/<%= @id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <% if @type == "account" %>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" name="password" class="form-control">
    </div>

    <% if @error %>
      <div class="alert alert-danger">
        Must enter correct password to delete.
      </div>
    <% end %>
    <a href="/account"><button type="button" class="btn">Cancel</button></a>
  <% else %>
    <a href="/<%= @type %>/<%= @id %>"><button type="button" class="btn">Cancel</button></a>
  <% end %>
  <button type="submit" class="btn">Delete</button>
</form>
